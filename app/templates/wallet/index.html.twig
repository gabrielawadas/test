{% extends 'base.html.twig' %}

{% block title %}Wallet index{% endblock %}

{% block body %}
    <h1>Wallet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Balance</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for wallet in wallets %}
            <tr>
                <td>{{ wallet.id }}</td>
                <td>{{ wallet.name }}</td>
                <td>{{ wallet.balance }}</td>

                <td>
                    <a href="{{ path('wallet_show', {'id': wallet.id}) }}">show</a>
                    <a href="{{ path('wallet_edit', {'id': wallet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('wallet_new') }}">Create new</a>


    <h1>New action</h1>

    <a href="{{ path('action_new') }}">Create new</a>

    <h1>Actions list</h1>

    <a href="{{ path('action_index') }}">Show list</a>


    <h1>New category</h1>

    <a href="{{ path('category_new') }}">Create new</a>



{% endblock %}

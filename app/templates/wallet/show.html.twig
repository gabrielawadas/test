{% extends 'base.html.twig' %}

{% block title %}Wallet{% endblock %}

{% block body %}
    <h1>Wallet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ wallet.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ wallet.name }}</td>
            </tr>
            <tr>
                <th>Balance</th>
                <td>{{ wallet.balance }}</td>
            </tr>
        </tbody>
    </table>



    <a href="{{ path('wallet_edit', {'id': wallet.id}) }}" class="btn btn-outline-success">Edit</a><br><br>

    {{ include('wallet/_delete_form.html.twig') }}<br>


    <form>
        <div class="input-group mb-3">
            <input type="text"
                   name="q"
                   class="form-control"
                   placeholder="Search..."
            >
            <div class="input-group-append">
                <button type="submit"
                        class="btn btn-outline-secondary">
                    <span class="fa fa-search"></span>
                </button>
            </div>
        </div>
    </form>


    <table class="table">
        <thead>
        <tr>

            <th>Name</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Date</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for actions in wallet.actions %}
            <tr>

                <td>{{ actions.name }}</td>
                <td>{{ actions.amount }}</td>
                <td>{{ actions.category }}</td>
                <td>{{ actions.date|date("d-m-y") }}</td>
                <td>
                    <a href="{{ path('action_show', {'id': actions.id}) }}">show</a>
                    <a href="{{ path('action_edit', {'id': actions.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br><a href="{{ path('wallet_index') }}" class="btn btn-outline-success">Back to wallets</a>

{% endblock %}

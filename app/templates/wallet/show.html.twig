{% extends 'base.html.twig' %}

{% block title %}Wallet{% endblock %}

{% block body %}
    <h1>Wallet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ wallet.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ wallet.name }}</td>
            </tr>
            <tr>
                <th>Balance</th>
                <td>{{ wallet.balance }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('wallet_index') }}">back to list</a>

    <a href="{{ path('wallet_edit', {'id': wallet.id}) }}">edit</a>

    {{ include('wallet/_delete_form.html.twig') }}




    <table class="table">
        <thead>
        <tr>

            <th>Name</th>
            <th>Amount</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for actions in wallet.actions %}
            <tr>

                <td>{{ actions.name }}</td>
                <td>{{ actions.amount }}</td>

                <td>
                    <a href="{{ path('action_show', {'id': actions.id}) }}">show</a>
                    <a href="{{ path('action_edit', {'id': actions.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

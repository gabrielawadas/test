{% extends 'base.html.twig' %}

{% block title %}User details{% endblock %}

{% block body %}
    <h1>User details</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Email</th>

                <th>Password</th>

            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>

                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>

                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <br><a href="{{ path('wallet_index') }}" class="btn btn-outline-success">Back to wallets</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Action index{% endblock %}

{% block body %}
    <h1>Actions</h1>
    <form>
        <div class="input-group mb-3">
            <input type="text"
                   name="q"
                   class="form-control"
                   placeholder="Category"
            >
            <div class="input-group-append">
                <button type="submit"
                        class="btn btn-outline-secondary">
                    <span class="fa fa-search"></span>
                </button>
            </div>
        </div>
    </form>
    
    Search by date range and calculate balance
    <form action="{{ path('action_search') }}" method="POST">
        <input type="date" name="date1" />
        <input type="date" name="date2" />
        <input type="text" name="wallet" value="provident">
        <input type="submit" value="Search" />
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Wallet</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for action in actions  %}
            <tr>

                <td>{{ action.name }}</td>
                <td>{{ action.amount }}</td>
                <td>{{ action.date|date("d/m/Y") }}</td>
                <td>{{ action.wallet }}</td>
                <td>{{ action.category }}</td>
                <td>
                    <a href="{{ path('action_show', {'id': action.id}) }}">show</a>
                    <a href="{{ path('action_edit', {'id': action.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('action_new') }}" class="btn btn-outline-primary">Create new</a><br><br>
    <a href="{{ path('wallet_index') }}" class="btn btn-outline-primary">Back to wallets</a>
{% endblock %}
